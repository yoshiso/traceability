<!doctype html>
<html>
  <head>
    <title><%= environment_title_prefix %><%= Traceability::NAME %></title>
    <link href="<%= root_path %>stylesheets/bootstrap.css" media="screen" rel="stylesheet" type="text/css" />
    <link href="<%= root_path %>stylesheets/application.css" media="screen" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="<%= root_path %>javascripts/application.js"></script>
    <meta name="google" content="notranslate" />
  </head>
  <body class="admin">
    <%= erb :_header %>
    <div class="container" style="position:absolute;top:52px;left:calc(100% /2 - 970px/2);height:calc(100%-52px);bottom:0;">

      <div class="row" style="height:100%;">
        <div class="col-xs-4" style="background:#222224;height:100%;padding:0;overflow-y:scroll;overflow-x:hidden;">
          <%= erb :_nav %>
        </div>
        <div class="col-xs-8" style="height:100%;overflow-y:scroll;overflow-x:hidden;">
            <%= yield %>
        </div>

      </div>

    </div>
  </body>
</html>